<div class="row" id="main-logo">
	<div class="col-lg-12">
		<%= image_tag("logo.png", alt:"System Remnant logo") %>
	</div>
</div>

<div class="row" id="articles">
    <div class="col-lg-6" id="body">
    	<% @articles.order('publish_date DESC').each do |article| %>
    	    <%= 
    	    if article.isShowing
    	    	render 'article', article: article
    	    end
    	    %>
    	<% end %>
	</div>
</div>
